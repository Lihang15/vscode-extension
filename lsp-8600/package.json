{
	"name": "lsp-8600dsl",
	"description": "A language server example",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "lihang",
    "icon": "client/icons/芯片.png",
	"categories": ["Snippets"],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./client/out/extension",

	"contributes": {
		"languages": [
			{
				"id": "flow",
				"aliases": [
					"flow",
					"flow"
				],
				"extensions": [
					".flow"
				],
				"icon": {
					"dark": "./client/icons/flow.svg",
					"light": "./client/icons/flow-icon.svg"
				},
				"configuration": "./client/language/language-flow-configuration.json"
			},
			{
				"id": "signal",
				"aliases": [
					"signal",
					"signal"
				],
				"extensions": [
					".signal"
				],
				"icon": {
					"dark": "./client/icons/general-icon.svg",
					"light": "./client/icons/general-icon.svg"
				},
				"configuration": "./client/language/language-signal-configuration.json"
			},
			{
				"id": "binmap",
				"aliases": [
					"binmap",
					"binmap"
				],
				"extensions": [
					".binmap"
				],
				"icon": {
					"dark": "./client/icons/general-icon.svg",
					"light": "./client/icons/general-icon.svg"
				},
				"configuration": "./client/language/language-configuration.json"
			},
			{
				"id": "tim",
				"aliases": [
					"tim",
					"tim"
				],
				"extensions": [
					".tim"
				],
				"icon": {
					"dark": "./client/icons/tim.svg",
					"light": "./client/icons/tim.svg"
				},
				"configuration": "./client/language/language-tim-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "flow",
				"scopeName": "source.general",
				"path": "./client/syntaxes/general.tmLanguage.json"
			},
			{
				"language": "signal",
				"scopeName": "source.general",
				"path": "./client/syntaxes/general.tmLanguage.json"
			},
			{
				"language": "tim",
				"scopeName": "source.general",
				"path": "./client/syntaxes/general.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "javascript",
				"path": "./client/snippets/flow.json"
			},
			{
				"language": "signal",
				"path": "./client/snippets/signal.json"
			},
			{
				"language": "tim",
				"path": "./client/snippets/tim/tim.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	},
	"dependencies": {
		"vscode-uri": "^3.1.0"
	}
}
